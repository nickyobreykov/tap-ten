<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liquidafro.tapten" >

    <!-- Include required permissions for Google Mobile Ads to run -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.liquidafro.tapten.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liquidafro.tapten.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.liquidafro.tapten.TestPlayActivity"
            android:label="@string/title_activity_test_play" >
        </activity>
        <activity
            android:name="com.liquidafro.tapten.LastPlayActivity"
            android:label="@string/title_activity_last_play" >
        </activity>
        <activity
            android:name="com.liquidafro.tapten.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.liquidafro.tapten.OwnSettingsActivity"
            android:label="@string/title_activity_own_settings" >
        </activity>
        <activity
            android:name="com.liquidafro.tapten.HighScoreActivity"
            android:label="@string/title_activity_high_score" >
        </activity>
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.liquidafro.tapten.ShopAndAchievementActivity"
            android:label="@string/title_activity_shop_and_achievement" >
        </activity>
    </application>

</manifest>